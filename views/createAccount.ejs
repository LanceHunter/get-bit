    <% include ./partials/bodyHeader.ejs %>
    <fieldset id="createAccountField">
      <legend>Create Account</legend>
      <form class="form">
        <div class="form-item">
          <label>email <span class="req">*</span></label>
          <input type="email" name="email" id="email1">
