<!DOCTYPE html>
<html>

<head>
  <% include ./partials/header.ejs %>
    <title>Get Bit</title>
</head>

<body>
  <% include ./partials/bodyHeader.ejs %>
    <% include ./partials/tabs.ejs %>

      <div class="row align-center auto">
        <div class="row align-center">
          <a href="/bits/<%= userID %>/new" class="button secondary round w50 w100-sm text-center">New Bit</a>
        </div>

        <p>
        </p>

        <div class="row align-center auto">
          <form method="post" action="" class="form">
            <div class="form-item">
              <div class="append w50 w100-sm">
                <input type="text" name="search" placeholder="Search">
                <button class="button outline">Go</button>
              </div>
            </div>
          </form>
        </div>
        <div class="row align-center">
          <ul class="unstyled large">
            <% bits.forEach(function(bit) { %>
              <% let starKey = bit.avg %>
                <li>
                  <a href="/bits/<%= bit.user_id%>/<%= bit.joke_id %>">
                    <%= bit.joke_title %>
                  </a>
                  <% if (bit.label) { %>
                    <span class="label upper focus"><%= bit.label %></span>
                    <% } %>
                      Rating:
                      <% include ./partials/stars.ejs%>
                </li>
                <% }); %>
          </ul>
        </div>
        <div class="row align-center auto">
          <div class="form-item">
            <div class="append">
              <select id="labelSelect">
              <% bits.forEach((bit) => { %>
                <option value="b<%= bit.joke_id %>">
                  <%= bit.label %>
                </option>
              <% }); %>
            </select>
              <button class="button outline" id="addSelectButton">+</button>
            </div>
          </div>
        </div>
</body>
<% include ./partials/footer.ejs %>

</html>
